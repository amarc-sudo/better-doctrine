{
  "name": "amarc-sudo/better-doctrine",
  "description": "A bundle of upgrades to supercharge Doctrine with raw SQL: stored procedures, automatic multi-DB migrations, and easy execution.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "doctrine/dbal": "^3.7",
    "doctrine/migrations": "^3.6",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^5.22",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "psr-4": {
      "BetterDoctrine\\StoredProcedure\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BetterDoctrine\\StoredProcedure\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "psalm": "psalm",
    "lint": "phpcs"
  }
}
